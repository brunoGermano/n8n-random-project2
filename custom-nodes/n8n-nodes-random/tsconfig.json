{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "nodes",
    "credentials"
  ]
}
